<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<h1>Books</h1>

<% @books.each do |book| %>

  <p>Title</p>
  <span><%= link_to book.title, book_path(book.id) %></span>

  <p>Body</p>
  <span><%= link_to book.body, book_path(book.id) %></span>

  <%= link_to 'Show', book_path(book.id) %>
  <%= link_to 'Edit', edit_book_path(book.id) %>
  <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>



<% end %>

